                                                <ul class="dropdown-menu">
                                                    {% for el2 in  el.children %}
                                                    <li><a href="{{ path('categorypage',{'slug':el2.slug}) }}">{{ el2 }}</a></li>
                                                    {% endfor %}

                                                </ul>
                                                {% endif %}<!-- .dropdown-menu -->
                                            </li><!-- .dropdown-submenu -->
